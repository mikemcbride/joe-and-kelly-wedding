html {
  font-size: 16px;
  box-sizing: border-box;
  font-family: 'Montserrat', sans-serif;
  -webkit-font-smoothing: antialiased;
  -moz-osx-font-smoothing: grayscale;
}

*, *:before, *:after { box-sizing: inherit; }


body, h1, h2, h3, h4, h5, h6,
p, blockquote, pre, hr,
dl, dd, ol, ul, figure {
  margin: 0;
  padding: 0;
}

h1, h2, h3, h4, h5, h6,
p, blockquote, pre,
ul, ol, dl, figure {
  margin-bottom: var(--sm);
}

body {
  color: var(--text-main);
  background-color: var(--black);
}

a {
  color: var(--link-color);
  text-decoration: none;
}

ul, ol {
  margin-left: var(--md);
}

li {
  > ul,
  > ol {
    margin-bottom: 0;
  }
}

.nav-link {
  color: var(--gray);
  text-decoration: none;
  border-bottom: 3px solid transparent;
  transition: all .12s ease;
  
  &:hover {
    color: var(--gold);
  }
  
  &.active {
    opacity: 1;
    color: var(--gold);
    border-bottom-color: var(--gold);
  }
}

#nav-list {
  display: block;
  top: 0;
  right: -120%; /* ensure there's enough off-screen space that box-shadow doesn't show */
  bottom: 0;
  width: 100%;
  transition: transform 0.3s linear;
  box-shadow: 3px 0 8px 6px rgba(255,255,255,0.5);
  
  &.open {
    transform: translateX(-120%);
  }
}

.gold { color: var(--gold); }
