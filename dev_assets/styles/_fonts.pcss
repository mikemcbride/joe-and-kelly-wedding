@font-face {
  font-family: 'icomoon';
  src:  url('fonts/icomoon.eot?33kxu4');
  src:  url('fonts/icomoon.eot?33kxu4#iefix') format('embedded-opentype'),
    url('fonts/icomoon.ttf?33kxu4') format('truetype'),
    url('fonts/icomoon.woff?33kxu4') format('woff'),
    url('fonts/icomoon.svg?33kxu4#icomoon') format('svg');
  font-weight: normal;
  font-style: normal;
}

.icon {
  font-family: 'icomoon' !important;
  speak: none;
  font-style: normal;
  font-weight: normal;
  font-variant: normal;
  text-transform: none;
  line-height: 1;
  -webkit-font-smoothing: antialiased;
  -moz-osx-font-smoothing: grayscale;
  
  &.icon-close:before { content: "\f00d"; }
  &.icon-clock:before { content: "\f017"; }
  &.icon-map-marker:before { content: "\f041"; }
  &.icon-calendar:before { content: "\f073"; }
  &.icon-globe:before { content: "\f0ac"; }
  &.icon-menu:before { content: "\f0c9"; }
}








